---
const ingredients = [
  {
    text : "2-3 large eggs"
  }, 
  {
    text : "Salt, to taste"
  },
  {
    text : "Pepper, to taste"
  },
  {
    text : "1 tablespoon of butter or oil"
  },
  {
    text : "Optional fillings: cheese, diced vegetables, cooked meats, herbs"
  },
]
---

<section class="mt-12">
    <h2>Ingredients</h2>

    <ul id="ingredients-list" class="ml-7">
      {
        ingredients.map(ingredient =>{
          return <li class="px-5 py-2">{ingredient.text}</li>
        })
      }
    </ul>
  </section>